        {
          "name": "Asignar Cami√≥n a Tramo",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json.camionId) { pm.environment.set('camion_id', json.camionId); }",
                  "pm.environment.set('tramo_id', json.id || pm.environment.get('tramo_id'));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token_operador}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"camionId\": {{camion_id}} }"
            },
            "url": "{{gateway_base_url}}/api/logistics/tramos/{{tramo_id}}/asignaciones"
          }
        },
