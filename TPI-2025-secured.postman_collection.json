    {
      "name": "üë§ Cliente",
      "item": [
        {
          "name": "Crear Solicitud",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  pm.environment.set('solicitud_id', json.id);",
                  "  if (json.contenedor && json.contenedor.id) { pm.environment.set('contenedor_id', json.contenedor.id); }",
                  "}",
                  ""
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token_cliente}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cliente\": {\n    \"nombre\": \"ACME Corp\",\n    \"email\": \"cliente01@tpi.com\",\n    \"telefono\": \"+54 11 5555-1111\",\n    \"cuit\": \"30-12345678-9\"\n  },\n  \"contenedor\": {\n    \"codigo\": \"CONT-XYZ-1234\",\n    \"peso\": 1200.5,\n    \"volumen\": 28.4\n  },\n  \"origen\": {\n    \"direccion\": \"Buenos Aires\",\n    \"latitud\": -34.6037,\n    \"longitud\": -58.3816\n  },\n  \"destino\": {\n    \"direccion\": \"C√≥rdoba\",\n    \"latitud\": -31.4201,\n    \"longitud\": -64.1888\n  },\n  \"observaciones\": \"Carga fr√°gil\"\n}"
            },
            "url": "{{gateway_base_url}}/api/orders/orders"
          }
        },
        {
          "name": "Detalle de Solicitud Propia",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token_cliente}}" }
            ],
            "url": "{{gateway_base_url}}/api/orders/orders/{{solicitud_id}}"
          }
        },
        {
          "name": "Tracking desde Orders",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token_cliente}}" }
            ],
            "url": "{{gateway_base_url}}/api/orders/orders/{{solicitud_id}}/tracking"
          }
        },
        {
          "name": "Tracking extendido (Logistics)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token_cliente}}" }
            ],
            "url": {
              "raw": "{{gateway_base_url}}/api/logistics/seguimiento/contenedores/{{contenedor_id}}?solicitudId={{solicitud_id}}",
              "host": [ "{{gateway_base_url}}" ],
              "path": [ "api", "logistics", "seguimiento", "contenedores", "{{contenedor_id}}" ],
              "query": [
                { "key": "solicitudId", "value": "{{solicitud_id}}" }
              ]
            }
          }
        }
      ]
    },
